<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cisneros_ExamenP2.MainPage"
             Title="MainPage">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Bienvenido a la" FontSize="34" HorizontalOptions="Center"/>
        <Label Text="Aplicacion de" FontSize="32" HorizontalOptions="Center"/>
        <Label Text="Mateo Cisneros" FontSize="30" HorizontalOptions="Center"/>
        <Image Source="star_wars_logo.png" HeightRequest="250" WidthRequest="250" HorizontalOptions="Center"/>
        <Button 
            x:Name="ChistesButton"
            Text="Chistes" Clicked="OnChistesClicked"/>
        <Button 
            x:Name="AboutButton"
            Text="About" Clicked="OnAboutClicked"/>
    </StackLayout>
</ContentPage>