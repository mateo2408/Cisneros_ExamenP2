<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cisneros_ExamenP2.Pages.AboutPage"
             Title="AboutPage">

    <Grid RowDefinitions="Auto, Auto"
          ColumnDefinitions="*,*"
          Padding="20"
          VerticalOptions="Center"
          HorizontalOptions="Center">

        <!-- Nombre -->
        <Frame Grid.Row="0" Grid.Column="0" Margin="5" BorderColor="Black">
            <VerticalStackLayout>
                <Label Text="Nombre:" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Mateo Cisneros" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Fecha -->
        <Frame Grid.Row="0" Grid.Column="1" Margin="5" BorderColor="Black">
            <VerticalStackLayout>
                <Label Text="Fecha:" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="{Binding CurrentDate}" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Intereses -->
        <Frame Grid.Row="1" Grid.Column="0" Margin="5" BorderColor="Black">
            <VerticalStackLayout>
                <Label Text="Intereses:" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Tecnología, Videojuegos" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Versión -->
        <Frame Grid.Row="1" Grid.Column="1" Margin="5" BorderColor="Black">
            <VerticalStackLayout>
                <Label Text="Versión:" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="1.0" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>